# Скопируйте этот файл как .env и заполните своими данными

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================

# Токен вашего Telegram бота (получить у @BotFather)
BOT_TOKEN=ваш_токен_здесь

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Путь к файлу базы данных SQLite
DATABASE_PATH=data/bot.db

# Путь для сохранения резервных копий
DATABASE_BACKUP_PATH=data/backups/

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/bot.log

# ============================================
# APPLICATION SETTINGS
# ============================================

# Название приложения
APP_NAME=ДоброБот

# Версия приложения
APP_VERSION=1.0.0

# Режим отладки (True для разработки, False для продакшена)
DEBUG_MODE=False

# Максимальное количество попыток входа перед блокировкой
MAX_LOGIN_ATTEMPTS=3

# Время блокировки при превышении попыток входа (в минутах)
LOGIN_BLOCK_TIME=15

# ============================================
# SUPPORT & ADMIN SETTINGS
# ============================================

# Контакт поддержки (Telegram username или номер)
SUPPORT_CONTACT=+996556666313

# Telegram ID администратора (для отправки отчетов)
ADMIN_ID=0

# Email для письменной поддержки
SUPPORT_EMAIL=support@dobrobot.example.com

# ============================================
# FEATURE FLAGS
# ============================================

# Включить систему рейтинга
ENABLE_RATING=true

# Включить систему сообщений
ENABLE_MESSAGES=true

# Включить систему уведомлений
ENABLE_NOTIFICATIONS=true

# Включить систему отзывов
ENABLE_REVIEWS=true

# ============================================
# CONSTRAINTS & LIMITS
# ============================================

# Максимальная длина описания заявки (символов)
MAX_DESCRIPTION_LENGTH=1000

# Максимальное количество заявок в день
MAX_REQUESTS_PER_DAY=10

# Максимальное количество откликов в день
MAX_RESPONSES_PER_DAY=20

# Минимальный рейтинг для создания заявок
MIN_RATING_FOR_REQUESTS=1.0

# ============================================
# TIMING SETTINGS
# ============================================

# Время жизни сессии (часов)
SESSION_LIFETIME=24

# Время между проверками уведомлений (секунд)
NOTIFICATION_CHECK_INTERVAL=30

# Время для автоматического удаления старых логов (дней)
LOG_RETENTION_DAYS=30
